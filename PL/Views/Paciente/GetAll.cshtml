@model ML.Paciente
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row text-center">
        <h1>PACIENTES</h1>
        <hr />
    </div>
    <br />
    <div class="row">
        <p><b>INSTRUCCIONES</b></p>
        <p><b>BOTON VERDE:    </b>Envia a un formulario para registrar un paciente</p>
        <p><b>BOTON AMARILLO: </b>Envia a un formulario para modificar un paciente</p>
        <p><b>BOTON ROJO:     </b>Elimina a un paciente</p>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("Agregar", "Form", "Paciente", new { @class = "btn btn-success col-md-12" })
        </div>
        <div class="col-md-6">
            @Html.ActionLink("Regresar", "Form", "Paciente", new { @class = "btn btn-danger col-md-12" })
        </div>
    </div>
    <hr />
    <br />
    <div class="row">
        @if (Model.Pacientes != null)
        {
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th scope="col">EDITAR</th>
                        <th scope="col" class="visually-hidden">ID PACIENTE</th>
                        <th scope="col">NOMBRE</th>
                        <th scope="col">APELLIDO PATERNO</th>
                        <th scope="col">APELLIDO MATERNO</th>
                        <th scope="col">FECHA NACIMIENTO</th>
                        <th scope="col">FECHA INGRESO</th>
                        <th scope="col">SEXO</th>
                        <th scope="col" class="visually-hidden">ID TIPO SANGRE</th>
                        <th scope="col">TIPO SANGRE</th>
                        <th scope="col">SINTOMAS</th>
                        <th scope="col">ELIMINAR</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Paciente paciente in Model.Pacientes)
                    {
                        <tr>
                            <td><a href="@Url.Action("Form","Paciente", new { IdPaciente = paciente.IdPaciente })" class="btn btn-warning bi bi-pencil-square"></a></td>
                            <td class="visually-hidden">@paciente.IdPaciente</td>
                            <td>@paciente.Nombre</td>
                            <td>@paciente.ApellidoPaterno</td>
                            <td>@paciente.ApellidoMaterno</td>
                            <td>@paciente.FechaNacimiento</td>
                            <td>@paciente.FechaIngreso</td>
                            <td>@paciente.Sexo</td>
                            <td class="visually-hidden">@paciente.TipoSangre.IdTipoSangre</td>
                            <td>@paciente.TipoSangre.Nombre</td>
                            <td>@paciente.Sintomas</td>
                            <td><a href="@Url.Action("Delete","Paciente", new { IdPaciente = paciente.IdPaciente })" class="btn btn-danger bi bi-trash3-fill"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
        }
    </div>
</div>